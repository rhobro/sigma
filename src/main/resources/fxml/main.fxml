<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<JFXDrawer xmlns:fx="http://javafx.com/fxml/1" minHeight="600.0" minWidth="400.0" xmlns="http://javafx.com/javafx/"
           fx:controller="tech.neurobyte.dev.controllers.MainController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <JFXScrollPane VBox.vgrow="ALWAYS">
            <children>
               <JFXComboBox fx:id="currencyPicker" labelFloat="true" promptText="Currency"/>
               <JFXListView fx:id="list">
               </JFXListView>
            </children>
         </JFXScrollPane>
         <HBox>
            <padding>
               <Insets bottom="7.0" left="7.0" right="7.0" top="11.0"/>
            </padding>
            <JFXTextField fx:id="expenseField" labelFloat="true" promptText="Expense" HBox.hgrow="ALWAYS"/>
            <JFXTextField fx:id="valueField" labelFloat="true" promptText="Value" HBox.hgrow="ALWAYS"/>
            <JFXButton fx:id="add" buttonType="RAISED" minWidth="60.0" text="Add">
               <HBox.margin>
                  <Insets left="10.0"/>
               </HBox.margin>
            </JFXButton>
         </HBox>
      </VBox>
   </children>
</JFXDrawer>
